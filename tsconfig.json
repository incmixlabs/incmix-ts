{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext",
      "scripthost"
    ],
    "newLine": "LF",
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": false,
    "isolatedModules": false,
    "jsx": "preserve",
    "jsxImportSource": "solid-js",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "sourceMap": false,
    "types": [
      "node",
      "jest"
    ],
    "declaration": true,
    "module": "commonjs"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "**/src/**/*.ts",
    "node_modules/.tsr/**/*"
  ]
}