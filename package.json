{
  "type": "module",
  "packageManager": "^pnpm@7.8.0",
  "name": "incmix-ui-monorepo",
  "description": "Typescript Runtime",
  "homepage": "TODO: Homepage",
  "bugs": {
    "url": "TODO: Bugs URL"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "changeset": "changeset",
    "clean": "turbo run clean && rm -rf node_modules",
    "commit": "git-cz",
    "format": "prettier . --write --ignore-path .gitignore && git update-index --again",
    "lint": "eslint . --ext .ts --ignore-path .gitignore --max-warnings=0",
    "lint-fix": "eslint . --ext .ts --fix --ignore-path .gitignore --max-warnings=0",
    "prepare": "husky install",
    "release": "turbo run build && changeset publish",
    "test": "jest",
    "typecheck": "turbo run typecheck",
    "version-packages": "changeset version && pnpm install --no-frozen-lockfile"
  },
  "config": {
    "commitizen": {
      "path": "@commitlint/cz-commitlint"
    }
  },
  "devDependencies": {
    "@changesets/cli": "2.22.0",
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@commitlint/cz-commitlint": "16.2.3",
    "@types/jest": "27.4.1",
    "@types/lodash.merge": "4.6.6",
    "@types/node": "17.0.23",
    "@typescript-eslint/eslint-plugin": "5.18.0",
    "@typescript-eslint/parser": "5.18.0",
    "commitizen": "4.2.4",
    "eslint": "8.12.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "2.7.1",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-simple-import-sort": "7.0.0",
    "eslint-plugin-solid": "0.4.6",
    "husky": "7.0.4",
    "jest": "27.5.1",
    "lint-staged": "12.3.7",
    "prettier": "2.6.2",
    "prismjs": "1.27.0",
    "ts-jest": "27.1.4",
    "turbo": "1.2.4",
    "typescript": "4.6.4",
    "vite": "2.9.1",
    "vite-plugin-dts": "1.1.1",
    "inquirer": "8.0.0"
  },
  "lint-staged": {
    "*.ts": "eslint --ext .ts --ignore-path .gitignore --max-warnings=0 --fix"
  }
}
