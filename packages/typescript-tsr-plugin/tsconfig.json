{
  "extends": "@tsconfig/node12/tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "outDir": "dist",
    "sourceMap": true,
    "composite": true,
    "plugins": [
      {
        "name": "typescript-tsr-plugin"
      }
    ]
  },
  "include": [
    "./src/**/*",
    "node_modules/.tsr/**/*"
  ],
  "exclude": [
    "./node_modules"
  ]
}